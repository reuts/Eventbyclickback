{
  "kind": "collectionType",
  "collectionName": "email_templates",
  "info": {
    "singularName": "email-template",
    "pluralName": "email-templates",
    "displayName": "Email Template"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "header": {
      "type": "text"
    },
    "body": {
      "type": "blocks"
    },
    "footer": {
      "type": "text"
    },
    "event_hash": {
      "type": "string"
    },
    "is_ai_generated": {
      "type": "boolean",
      "default": false
    },
    "campaigns": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::campaign.campaign",
      "mappedBy": "template_id"
    }
  }
}
